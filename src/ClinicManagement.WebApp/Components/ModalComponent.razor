@inject NavigationManager NavigationManager

@if (isVisible)
{
    <div class="modal fade show" tabindex="-1" aria-hidden="true" style="display:block;">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">@title</h5>
                    <button type="button" class="btn-close" aria-label="Close" @onclick="Hide"></button>
                </div>
                <div class="modal-body">
                    @content
                </div>
                <div class="modal-footer">
                    @switch (modalType)
                    {
                        case ModalType.TwoButtons:
                            <button type="button" class="btn btn-secondary" @onclick="Hide">@SecondaryButtonText</button>
                            <button type="button" class="btn btn-success" @onclick="ExecuteActionAsync">@PrimaryButtonText</button>
                            break;
                        case ModalType.OkButtonWithRedirectToUrl:
                            <button type="button" class="btn btn-primary" @onclick="RedirectToUrl">OK</button>
                            break;
                        case ModalType.OkButtonWithoutAction:
                        default:
                            <button type="button" class="btn btn-primary" @onclick="Hide">OK</button>
                            break;
                    }
                </div>
            </div>
        </div>
    </div>
}
