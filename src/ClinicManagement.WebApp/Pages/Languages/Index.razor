@page "/languages"
@inject HttpClient Http
@inject IClinicManagementApiService ApiService
@inject ILogger<Index> Logger

<PageTitle>Clinic Management - Languages</PageTitle>

<div class="pagetitle">
    <h1>Languages</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item active">Languages</li>
        </ol>
    </nav>
</div>

<section class="section">
    <div class="row">
        <div class="col">
        </div>
        <div class="col-1">
            <div class="btn-group mb-3" role="toolbar" aria-label="Toolbar with button groups">
                <a href="languages/create" role="button" class="btn btn-success" title="New"><i class="bi bi-plus-lg"></i> New</a>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">List of languages</h5>
                @if (apiResponse == null)
                {
                    <SpinnerComponent MessageLoading="Loading languages..." MessageNotFound="There are no languages available at the moment" ShowSpinner="showSpinner" />
                }
                else
                {
                    <table class="table datatable table-striped">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Name</th>
                                <th scope="col" class="col-1">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var (language, index) in apiResponse.Items.Select((language, index) => (language, index + 1)))
                            {
                                <tr>
                                    <td scope="row">@index</td>
                                    <td>@language.Name (@language.Code)</td>
                                    <td>
                                        <a href="/languages/edit/@language.VanityId" role="button" class="btn btn-secondary btn-sm" title="Edit"><i class="bi bi-pencil"></i></a>
                                        <button type="button" class="btn btn-danger btn-sm" @onclick="() => ShowDeleteModal(language)">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
            </div>
        </div>
    </div>
</section>

<ModalComponent @ref="modalComponent" PrimaryButtonText="Yes" SecondaryButtonText="No" EventCallback="HandleEventCallbackAsync" />


